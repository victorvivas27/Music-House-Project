# Etapa de construcci칩n
FROM node:18 AS build

WORKDIR /app

# Copiamos archivos necesarios
COPY package.json .
COPY package-lock.json ./
COPY .env.production .env.production

RUN npm install

# Copiamos el resto del c칩digo
COPY . .

ENV NODE_ENV=production

# Ejecutamos el build de Vite
RUN npm run build

# Etapa final: usar Nginx para servir archivos est치ticos
FROM nginx:alpine

# 游댠 Sobrescribimos la configuraci칩n de Nginx con nuestro archivo personalizado
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copiamos el build generado
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80


CMD ["nginx", "-g", "daemon off;"]